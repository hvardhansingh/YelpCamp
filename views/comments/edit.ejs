<%- include('../partials/header') %> 

<div class="container" style="width: 500px;">
    <h1>Edit your comment</h1>
    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id%>?_method=PUT", method="POST" >
        <div class="form-group">
            <label for="comment[text]">Text</label>
            <input class="form-control" type="text" name="comment[text]" placeholder="Type Comment..." value="<%=comment.text%>">
        </div>
        <button type="submit" class="btn btn-default btn-block btn-primary">Submit</button>
    </form>
</div>


