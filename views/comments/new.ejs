<%- include('../partials/header') %> 


<div class="container" style="width: 500px;">
    <h1>Create new comment for <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>/comments", method="POST" >
        <div class="form-group">
            <label for="comment[author]">Author</label>
            <input class="form-control" type="text" name="comment[author]" placeholder="Name" >
        </div>
        <div class="form-group">
            <label for="comment[text]">Text</label>
            <input class="form-control" type="text" name="comment[text]" placeholder="Image URL">
        </div>
        <button type="submit" class="btn btn-default btn-block btn-primary">Submit</button>
    </form>
</div>


<%- include('../partials/footer') %> 