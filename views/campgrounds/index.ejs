<%- include('../partials/header') %> 

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp !</h1>
            <p>View our handpicked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground</a>
            </p>
        </div>
    </header>        

    <div class="row text-center" >
        <% campgrounds.forEach(function(camp){ %>
            <div> 
                <div class="col-md-3 col-sm-4">
                    <div class="thumbnail">
                        <img src="<%= camp.image %>" alt="">
                        <div class="caption">
                            <h4><%= camp.name %></h4>  
                        </div>
                        <p>
                            <a href=' campgrounds/<%=camp._id%> ' class="btn btn-primary">View More</a>    
                        </p>
                    </div>
                </div>
                
            </div>
        <% }); %>
    </div>
</div>



<%- include('../partials/footer') %> 